<html>
<body>
	<div class="posts">
		<% posts.each do |post| %>
		  <div class="post">
		  	<h2 class="title">
		  		<a href="/show_post/<%= post.id %>"><%= post.title %></a>
		  	</h2>	
		  	<small class="meta">
		  		<span class="author">by <%= post.author %>&mdash;</span>
		  		<em class="created_at"> <%= post.created_at %></em>	  		
		  	</small> <br>	
		  	<form method="post" 
		  	      action="/delete_post/<%= post.id %>"
		  	      style='display: inline;'>
		  	      <input type="submit" value="delete">
          </form>
		  </div>
		  <hr>
		<% end %>
	</div>
	<br>
	<a href="/new_post">New Post</a>
</body>
</html>